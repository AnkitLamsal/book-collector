@model book_collector.ViewModels.CollectionsViewModel.EditCollectionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EditCollectionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="collectionName" class="control-label"></label>
                <input asp-for="collectionName" class="form-control" />
                <span asp-validation-for="collectionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="collectionDescription" class="control-label"></label>
                <input asp-for="collectionDescription" class="form-control" />
                <span asp-validation-for="collectionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="selectedBooks" class="control-label"></label>
                <select asp-for="selectedBooks" asp-items="Model.Books">
                    <option></option>
                </select>
                <span asp-validation-for="selectedBooks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
