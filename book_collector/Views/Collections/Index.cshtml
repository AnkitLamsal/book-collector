@model IEnumerable<book_collector.ViewModels.CollectionsViewModel.CollectionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Books Collections</h1>

<p>
    <a asp-action="Create">Create New </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.collectionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.collectionDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.collectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.collectionDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
